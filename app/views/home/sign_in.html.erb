<div class="container">

	<h1>Sign In</h1>



<%= form_tag("/sign_in_post", method: "post") do |form| %>

  
  <div class="form-group">
    <%= label_tag :email %>
    <%= text_field_tag :email, nil, class: 'form-control', required: 'true' %>
  </div>

  <div class="form-group">
    <%= label_tag :password %>
    <%= password_field_tag :password, nil, class: 'form-control', required: 'true' %>
  </div>

  
  <div class="actions">
    <%= submit_tag "Sign In", :class=>'btn btn-primary' %>
  </div>

   <%= link_to "(forgot password)", new_password_reset_path %>
<% end %>


	

</div>